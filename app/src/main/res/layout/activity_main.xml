<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!-- Panel hiển thị kết quả -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/panelGray"
        android:gravity="end|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="24dp"
        android:text="0"
        android:textSize="56sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:6"
    />

    <!-- Lưới phím 4×5 chiếm phần còn lại -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:columnCount="4"
        app:rowCount="5"
        app:useDefaultMargins="false"
        android:padding="@dimen/grid_padding"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hàng 1 -->
        <Button android:id="@+id/btnCE"  style="@style/CalcButton" android:text="CE" android:onClick="onClearEntry"/>
        <Button android:id="@+id/btnC"   style="@style/CalcButton" android:text="C"  android:onClick="onClearAll"/>
        <Button android:id="@+id/btnBS"  style="@style/CalcButton" android:text="BS" android:onClick="onBackspace"/>
        <Button android:id="@+id/btnDiv" style="@style/CalcButton" android:text="/"  android:onClick="onOperatorClick"/>

        <!-- Hàng 2 -->
        <Button android:id="@+id/btn7" style="@style/CalcButton" android:text="7" android:onClick="onDigitClick"/>
        <Button android:id="@+id/btn8" style="@style/CalcButton" android:text="8" android:onClick="onDigitClick"/>
        <Button android:id="@+id/btn9" style="@style/CalcButton" android:text="9" android:onClick="onDigitClick"/>
        <Button android:id="@+id/btnMul" style="@style/CalcButton" android:text="x" android:onClick="onOperatorClick"/>

        <!-- Hàng 3 -->
        <Button android:id="@+id/btn4" style="@style/CalcButton" android:text="4" android:onClick="onDigitClick"/>
        <Button android:id="@+id/btn5" style="@style/CalcButton" android:text="5" android:onClick="onDigitClick"/>
        <Button android:id="@+id/btn6" style="@style/CalcButton" android:text="6" android:onClick="onDigitClick"/>
        <Button android:id="@+id/btnSub" style="@style/CalcButton" android:text="-" android:onClick="onOperatorClick"/>

        <!-- Hàng 4 -->
        <Button android:id="@+id/btn1" style="@style/CalcButton" android:text="1" android:onClick="onDigitClick"/>
        <Button android:id="@+id/btn2" style="@style/CalcButton" android:text="2" android:onClick="onDigitClick"/>
        <Button android:id="@+id/btn3" style="@style/CalcButton" android:text="3" android:onClick="onDigitClick"/>
        <Button android:id="@+id/btnAdd" style="@style/CalcButton" android:text="+" android:onClick="onOperatorClick"/>

        <!-- Hàng 5 -->
        <Button android:id="@+id/btnSign" style="@style/CalcButton" android:text="+/-" android:onClick="onToggleSign"/>
        <Button android:id="@+id/btn0"    style="@style/CalcButton" android:text="0"   android:onClick="onDigitClick"/>
        <Button android:id="@+id/btnDot"  style="@style/CalcButton" android:text="."   android:onClick="onDotClick"/>
        <Button android:id="@+id/btnEq"   style="@style/CalcButtonAccent" android:text="=" android:onClick="onEqualsClick"/>
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
